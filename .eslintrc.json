{
  "extends": "eslint:recommended",
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "globals": {
    "mochaOptionsNeeded": true
  },
  "rules": {
    "require-jsdoc": 0,
    "valid-jsdoc": 0,
    "indent": 0,
    "no-unused-vars": 1,
    "no-trailing-spaces": 1,
    "curly": 2,
    "handle-callback-err": 2
  }
}
